pipeline {
    agent {
        docker { image 'python:latest' }
    }
    stages {
        stage('Build') {
            steps {
                sh 'chown -R $USER:$USER ./local'
                sh 'pip install --no-cache-dir -r vote/requirements.txt'
            }
        }
        stage('Test') {
            steps {
                sh 'nosetests -v'
            }
        }
    }
}
