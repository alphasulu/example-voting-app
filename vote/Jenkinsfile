pipeline {
    agent {
        docker { image 'python:2.7.16-slim' }
    }
    stages {
        stage('Build') {
            steps {
                 withEnv(["HOME=${env.WORKSPACE}"]) {
                    sh "pip install -r vote/requirements.txt --user"
                    sh 'nosetests -v'
                }
            }
        }
        stage('Test') {
            steps {
                withEnv(["HOME=${env.WORKSPACE}"]) {
                    sh 'nosetests -v'
                }
            }
        }
    }
}
