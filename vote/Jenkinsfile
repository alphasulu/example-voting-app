pipeline {
    agent {
        docker { image 'python:3' }
    }
    stages {
        stage('Build') {
            steps {
                 withEnv(["HOME=${env.WORKSPACE}"]) {
                    sh "pip install -r vote/requirements.txt --user"
                }
            }
        }
        stage('Test') {
            steps {
                sh 'nosetests -v'
            }
        }
    }
}
