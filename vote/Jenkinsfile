pipeline {
    agent {
        docker {
            image 'python:2.7.16-slim' 
            args '--user root'
         }
    }
    stages {
        stage('Build') {
            steps {
                  sh "pip install --user -r vote/requirements.txt"
            }
        }
        stage('Test') {
            steps {
                    sh 'nosetests -v'
            }
        }
    }
}
