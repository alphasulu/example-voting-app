pipeline {
    agent {
        docker { image 'python:3' }
    }
    stages {
        stage('Build') {
            steps {
                sh 'pip3 install --user --no-cache-dir -r vote/requirements.txt'
            }
        }
        stage('Test') {
            steps {
                sh 'nosetests -v'
            }
        }
    }
}
